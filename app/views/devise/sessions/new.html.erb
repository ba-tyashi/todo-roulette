<div style="max-width: 400px; margin: 60px auto; padding: 30px; border-radius: 12px; background-color: #ffffff; box-shadow: 0 10px 25px rgba(0,0,0,0.1); font-family: 'Helvetica Neue', Arial, sans-serif;">
  
  <h2 style="text-align: center; color: #333; margin-bottom: 25px; font-size: 24px; font-weight: bold;">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div style="margin-bottom: 20px;">
      <%= f.label :email, "メールアドレス", style: "display: block; margin-bottom: 8px; color: #555; font-size: 14px; font-weight: 600;" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@mail.com", style: "width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px; box-sizing: border-box; font-size: 16px;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= f.label :password, "パスワード", style: "display: block; margin-bottom: 8px; color: #555; font-size: 14px; font-weight: 600;" %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••", style: "width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px; box-sizing: border-box; font-size: 16px;" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div style="display: flex; align-items: center; margin-bottom: 25px; cursor: pointer;">
        <%= f.check_box :remember_me, style: "margin-right: 10px; cursor: pointer;" %>
        <%= f.label :remember_me, "ログイン状態を保持する", style: "color: #666; font-size: 14px; cursor: pointer;" %>
      </div>
    <% end %>

    <div style="margin-bottom: 20px;">
      <%= f.submit "ログインする", style: "width: 100%; padding: 14px; background-color: #28a745; color: white; border: none; border-radius: 6px; font-size: 16px; font-weight: bold; cursor: pointer; transition: background-color 0.2s;" %>
    </div>
  <% end %>

  <div style="border-top: 1px solid #eee; pt: 20px; text-align: center; font-size: 14px;">
    <div style="margin-top: 15px;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>