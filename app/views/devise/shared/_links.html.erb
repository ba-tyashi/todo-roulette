<div style="margin-top: 10px; line-height: 1.8;">
  <%- if controller_name != 'sessions' %>
    <div>
      <%= link_to "ログインはこちら", new_session_path(resource_name), style: "color: #007bff; text-decoration: none; font-weight: bold;" %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div>
      <%= link_to "新規アカウント登録", new_registration_path(resource_name), style: "color: #007bff; text-decoration: none; font-weight: bold;" %>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div>
      <%= link_to "パスワードを忘れた場合", new_password_path(resource_name), style: "color: #888; text-decoration: none; font-size: 0.85em;" %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      <%= link_to "確認メールが届かない場合", new_confirmation_path(resource_name), style: "color: #888; text-decoration: none; font-size: 0.85em;" %>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div>
      <%= link_to "アカウント凍結解除メールが届かない場合", new_unlock_path(resource_name), style: "color: #888; text-decoration: none; font-size: 0.85em;" %>
    </div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <div style="margin-top: 15px;">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, style: "background: #eee; border: 1px solid #ddd; padding: 5px 10px; border-radius: 4px; cursor: pointer;" %>
      <% end %>
    </div>
  <% end %>
</div>